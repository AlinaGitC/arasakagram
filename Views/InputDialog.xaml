<Window x:Class="arasakagram.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Style="{StaticResource RoundedWindowStyle}"
        Title="Создать чат" Height="300" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>

        
    </Window.Resources>
    <Viewbox>
        <StackPanel Margin="10">
        <TextBlock x:Name="PromptText" FontWeight="Bold" Margin="0,0,0,8"/>
        <TextBlock Text="Имя чата" Margin="0,0,0,2"/>
            <TextBox x:Name="InputBox" MinWidth="200" Margin="0,0,0,8" Height="28" Style="{StaticResource RoundedTextBoxStyle}" BorderBrush="#869293"/>
        <TextBlock Text="Тема чата" Margin="0,0,0,2"/>
            <TextBox x:Name="TopicBox" MinWidth="200" Margin="0,0,0,18" Height="28" Style="{StaticResource RoundedTextBoxStyle}" BorderBrush="#869293"/>
            
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="70" Height="25" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click" 
                        Background="#82CC7E" Foreground="White" FontWeight="SemiBold" Style="{StaticResource RoundButton}"/>
                <Button Content="Отмена" Width="70" Height="25" IsCancel="True" FontWeight="SemiBold" Background="#CC7E7E" Foreground="White" Style="{StaticResource RoundButton}"/>
        </StackPanel>
    </StackPanel>
    </Viewbox>
    
</Window> 